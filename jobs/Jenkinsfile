import groovy.json.JsonSlurperClassic

def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
}
//properties([pipelineTriggers([githubPush()])])
pipeline {
  agent any
  environment {
    appName = "variable" 
  }
  stages {

 stage("paso 1"){
     
      steps {
          script {			
           sh "echo 'Se realizo un push en master'"
        }
      }
    }
    stage("comprobacion npm"){
     
      steps {
          script {		
            env.NODEJS_HOME = "${tool 'nodejs-10.15.3'}"
          	env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"
          	sh 'npm --version'	
            sh "echo 'hola mundo'"
            sh 'node -v'
            sh "npm --version"
        }
      }
    }
    stage("paso build"){
     
      steps {
          script {			
           sh "echo 'Construyendo ...'"
        }
      }
    }
  }
  post {
      always {          
          deleteDir()
           sh "echo 'fase always'"
      }
      success {
            sh "echo 'fase success'"
        }

      failure {
            sh "echo 'fase failure'"
      }
      
  }
}  